{
  "version": 2,
  "name": "video-production-pipeline",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/api/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "src/api/**/*.ts": {
      "memory": 3008,
      "maxDuration": 300
    }
  }
}
